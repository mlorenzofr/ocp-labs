<network>
  <name>{{ item.name }}</name>
{% if 'plan' in item.keys() %}
  <metadata>
    <kvirt:info xmlns:kvirt="kvirt">
      <kvirt:plan>{{ item.plan }}</kvirt:plan>
    </kvirt:info>
  </metadata>
{% endif %}
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='{{ item.name }}' stp='{{ 'on' if item.stp | default(true) else 'off' }}' delay='0'/>
{% if 'mtu' in item.keys() %}
  <mtu size='{{ item.mtu }}'/>
{% endif %}
{% if 'mac' in item.keys() %}
  <mac address='{{ item.mac }}'/>
{% endif %}
  <domain name='{{ item.domain }}' localOnly='{{ 'yes' if item.dns | default(true) else 'no' }}'/>
  <dns enable='{{ 'yes' if item.dns | default(true) else 'no' }}'/>
  <ip family='ipv4' address='{{ item.ip.split('/')[0] }}' prefix='{{ item.ip.split('/')[1] }}'>
{% if item.dhcp | default(true) %}
    <dhcp>
      <range start='{{ item.network_base }}.2' end='{{ item.network_base }}.254'/>
    </dhcp>
{% endif %}
  </ip>
</network>
