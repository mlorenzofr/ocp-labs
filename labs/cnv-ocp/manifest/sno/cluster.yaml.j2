apiVersion: extensions.hive.openshift.io/v1beta1
kind: AgentClusterInstall
metadata:
  name: spoke
  namespace: spoke
spec:
  manifestsConfigMapRef:
    name: extra-manifests
  clusterDeploymentRef:
    name: spoke
  imageSetRef:
    name: img4.18.16-x86-64-appsub
  networking:
    networkType: "OVNKubernetes"
    clusterNetwork:
      - cidr: "10.128.0.0/14"
        hostPrefix: 23
    serviceNetwork:
      - "172.32.0.0/16"
    machineNetwork:
      - cidr: "10.0.2.0/24"
  provisionRequirements:
    controlPlaneAgents: 1
  sshPublicKey: {{ lab_ssh_pubkey }}
---
apiVersion: hive.openshift.io/v1
kind: ClusterDeployment
metadata:
  name: spoke
  namespace: spoke
  annotations:
    hive.openshift.io/try-install-once: "true"
spec:
  baseDomain: local.lab
  clusterName: spoke
  controlPlaneConfig:
    servingCertificates: {}
  clusterInstallRef:
    group: extensions.hive.openshift.io
    kind: AgentClusterInstall
    name: spoke
    version: v1beta1
  platform:
    agentBareMetal:
      agentSelector:
        matchLabels:
          cluster-name: "spoke"
  pullSecretRef:
    name: pullsecret-cluster-spoke
